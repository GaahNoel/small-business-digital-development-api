                  },
                  "description": {
                    "type": "string",
                    "required": true
                  },
                  "imageUrl": {
                    "type": "string",
                    "required": true
                  },
                  "accountId": {
                    "type": "string",
                    "required": true
                  },
                  "city": {
                    "type": "string",
                    "required": true
                  },
                  "country": {
                    "type": "string",
                    "required": true
                  },
                  "latitude": {
                    "type": "string",
                    "required": true
                  },
                  "longitude": {
                    "type": "string",
                    "required": true
                  },
                  "state": {
                    "type": "string",
                    "required": true
                  },
                  "street": {
                    "type": "string",
                    "required": true
                  },
                  "zip": {
                    "type": "string",
                    "required": true
                  }
                },
                "example": {
                  "name":"business 1",
                  "description":"business for some reason",
                  "imageUrl":"image.url.com",
