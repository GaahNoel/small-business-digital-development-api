                  },
                  "categoryId": {
                    "type": "string",
                    "required": true
                  }
                },
                "example": {
                  "name":"product 1",
                  "type":"product",
                  "description":"a product",
                  "listPrice":100,
                  "salePrice":80,
                  "imageUrl":"image.url.com",
                  "businessId":"123",
                  "categoryId":"123"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
