    "/api/product/create": {
      "post": {
        "tags": ["Product"],
        "summary": "Create",
        "description": "Create new product",
        "parameters": [{
          "name": "token",
          "in": "header",
          "description": "Jwt token",
          "required": true,
          "schema": {
            "type": "string"
          }
        }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "required": true
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "product",
                      "service"
                    ],
                    "required": true
                  },
